{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": [
      "react-native",
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@domains/*": [
        "src/domains/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.disabled/**"
  ],
  "extends": "expo/tsconfig.base"
}
